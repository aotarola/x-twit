<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_gravity="center" android:orientation="vertical"  >
    <ImageView android:id="@+id/ivProfileImage"
        android:layout_width="24dp"
        android:layout_gravity="end"
        android:layout_height="24dp"/>
    <EditText
        android:id="@+id/etStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/whats_happening"
        android:layout_gravity="center_horizontal"
        android:imeOptions="actionDone"
        android:textColorHint="#ccd6dd"
        android:inputType="textMultiLine"
        android:ems="10"
        android:lines="5"
        android:gravity="top|start"
        android:maxLength="140" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="140"
        android:id="@+id/tvCharCount"
        android:layout_marginRight="10dp"
        android:textColor="#ccd6dd"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/twit"
        android:minHeight="30dp"
        android:minWidth="70dp"
        android:textSize="12sp"
        android:id="@+id/btnTwit"
        android:padding="0px"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_button"
         />
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/aotarolaalvarad/AndroidStudioProjects/MySimpleTweets/app/src/main/res/layout/fragment_compose.xml -->