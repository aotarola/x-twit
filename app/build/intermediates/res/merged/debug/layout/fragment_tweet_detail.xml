<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        >
        <ImageView android:id="@+id/ivProfileImage"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_vertical">
                <TextView android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:text="test1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#444444"
                    android:padding="0dp"/>
                <TextView android:id="@+id/tvScreenName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="test2"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:id="@+id/tvBody"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="test3"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColor="#292f33"
        android:maxLines="5"
        android:ellipsize="end"/>
    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:hint="Reply to Him"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="140"
            android:id="@+id/tvCharCount"
            android:layout_marginRight="10dp"
            android:textColor="#ccd6dd"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twit"
            android:id="@+id/btnTwit"
            android:padding="0dp"
            android:minHeight="30dp"
            android:textSize="12sp"
            android:minWidth="70dp"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button"
            />
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/aotarolaalvarad/AndroidStudioProjects/MySimpleTweets/app/src/main/res/layout/fragment_tweet_detail.xml -->